{
  "name": "FlickrCleanr",
  "description": "Kill the annoying Yahoo bar on Flickr.",
  "version": "0.1.1",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png",
    "256": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.flickr.com/*"],
      "css": ["flickrcleanr.css"],
      "js": ["flickrcleanr.js"]
    }
  ],
  "permissions": [
    "tabs", "*://*.flickr.com/*"
  ],
  "manifest_version": 2
}
