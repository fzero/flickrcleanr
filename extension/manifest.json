{
  "name": "FlickrCleanr",
  "description": "Kill the annoying Yahoo bar on Flickr.",
  "version": "0.1.3",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.flickr.com/*"],
      "css": ["flickrcleanr.css"],
      "js": ["flickrcleanr.js"]
    }
  ],
  "permissions": [
    "tabs", "*://*.flickr.com/*"
  ],
  "manifest_version": 2
}
